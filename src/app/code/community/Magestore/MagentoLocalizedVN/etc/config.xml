<config>
    <modules>
        <Magestore_MagentoLocalizedVN>
            <version>0.1.0</version>
        </Magestore_MagentoLocalizedVN>
    </modules>

    <global>
        <resources>
            <magento_localized_vn_setup>
                <setup>
                    <module>Magestore_MagentoLocalizedVN</module>
                </setup>
            </magento_localized_vn_setup>
        </resources>
    </global>

    <default>
        <general>
            <country>
                <allow>VN</allow>
            </country>
            <locale>
                <code>vi_VN</code>
                <code_fallback>vi_VN</code_fallback>
                <firstday>1</firstday>
            </locale>
            <store_information>
                <merchant_country>VN</merchant_country>
            </store_information>
            <imprint>
                <shop_name>Giaytot</shop_name>
                <company_first>Giaytot</company_first>
                <zip>10000</zip>
                <street>No 1A Cu Chinh Lan</street>
                <city>Hanoi</city>
                <country>VN</country>
                <display_copyright>1</display_copyright>
            </imprint>
        </general>

        <design>
            <header>
                <welcome>Xin Chào!</welcome>
            </header>
        </design>

        <catalog>
            <custom_options>
                <time_format>24h</time_format>
                <date_fields_order>d,m,y</date_fields_order>
            </custom_options>
        </catalog>

        <autoshipping>
            <settings>
                <enabled>1</enabled>
                <country_id>VN</country_id>
            </settings>
        </autoshipping>

        <carriers>
            <freeshipping>
                <active>1</active>
                <title>Miễn phí vận chuyển</title>
                <name>Free shipping</name>
                <free_shipping_subtotal>50</free_shipping_subtotal>
            </freeshipping>
        </carriers>

        <payment>
            <ccsave>
                <active>0</active>
            </ccsave>
            <checkmo>
                <active>0</active>
            </checkmo>
            <free>
                <title>Miễn phí</title>
            </free>
            <banktransfer>
                <active>1</active>
                <title>Chuyển khoản ngân hàng</title>
                <sort_order>20</sort_order>
            </banktransfer>
            <cashondelivery>
                <active>0</active>
                <title>Thanh toán khi nhận hàng</title>
            </cashondelivery>
        </payment>

        <magento_localized>
            <module_title>Magento VN</module_title>
            <module_code>magento_vn</module_code>
            <module_url>http://de.nr-apps.com/store/magento-ch.html</module_url>
            <logo_filename>magento_localized/logo.png</logo_filename>
            <htmldata_url>http://www.nr-apps.com/n/magento_vi_vn/wizard.json</htmldata_url>
            <tracking_url>//www.nr-apps.com/n/germanstoreconfig/tracking</tracking_url>
            <newsfeed_url>http://www.nr-apps.com/n/media/germanstoreconfig/feed.xml</newsfeed_url>
            <iframe_url_prefix>//www.nr-apps.com/n/magento_vn_</iframe_url_prefix>
            <iframe_url_suffix>.html</iframe_url_suffix>
            <iframe_main_language_code>vn</iframe_main_language_code>
            <iframe_fallback_language_code>en</iframe_fallback_language_code>
            <feed_url_prefix>http://www.nr-apps.com/n/media/germanstoreconfig/</feed_url_prefix>
            <default_language>vi_VN</default_language>
            <available_languages>
                <en_US />
            </available_languages>
            <country>VN</country>
            <currency>VND</currency>
            <timezone>Asia/Bangkok</timezone>
            <install_guide_url>
                <vn>http://www.nr-apps.com/n/magento_vi_vn/guide.html</vn>
                <default>http://www.nr-apps.com/n/magento_ch_en/guide.html</default>
            </install_guide_url>
            <survey_url>
                <vn>//www.nr-apps.com/n/magento_ch_de/survey.html</vn>
                <default>//www.nr-apps.com/n/magento_ch_en/survey.html</default>
            </survey_url>
            <form_fields>
                <general__imprint__ceo>
                    <type>text</type>
                    <label>CEO</label>
                    <sorting>250</sorting>
                    <optional>1</optional>
                </general__imprint__ceo>
                <general__imprint__owner>
                    <type>text</type>
                    <label>Owner</label>
                    <sorting>260</sorting>
                    <optional>1</optional>
                </general__imprint__owner>
            </form_fields>
            <billsafe>
                <is_available>0</is_available>
            </billsafe>
        </magento_localized>
        <germansetup>
            <default_country>vn</default_country>
        </germansetup>
    </default>
</config>